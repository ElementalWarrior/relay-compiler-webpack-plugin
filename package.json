{
  "name": "relay-compiler-webpack-plugin",
  "version": "2.0.0-rc.3",
  "description": "Automatically run the Relay Compiler from Webpack",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielholmes/relay-compiler-webpack-plugin"
  },
  "main": "dist/index.js",
  "jsnext/main": "src/index.js",
  "files": [
    "dist"
  ],
  "author": "Daniel Holmes",
  "license": "BSD-3-Clause",
  "scripts": {
    "clean": "rimraf dist",
    "flow": "flow",
    "format": "prettier-standard 'src/**/*.js' 'test/**/*.js'",
    "format:check": "standard 'src/**/*.js' 'test/**/*.js'",
    "lint": "eslint --fix 'src/**/*.js'",
    "lint:check": "eslint 'src/**/*.js'",
    "test": "jest test --env node",
    "test:update": "jest test --env node -u",
    "test:coverage": "jest test --env node --coverage --coverageDirectory ./reports src",
    "build": "yarn flow && yarn format:check && yarn lint:check && yarn test && babel src --out-dir dist",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "peerDependencies": {
    "relay-compiler": "^2.0.0",
    "webpack": ">=3.0.0"
  },
  "dependencies": {
    "fast-glob": "~2.2.0",
    "graphql": "14"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-relay": "^1.7.0",
    "eslint": "^5.9.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "flow-bin": "0.84.0",
    "jest": "^23.6.0",
    "prettier-standard": "^8.0.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-relay": "^1.7.0",
    "relay-compiler": "^2.0.0-rc.1",
    "rimraf": "^2.6.2",
    "standard": "^12.0.1",
    "webpack": "^4.5.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "6.1"
          }
        }
      ],
      "@babel/preset-flow"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ]
  }
}
